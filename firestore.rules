rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (you might need to adjust this based on your admin logic, e.g., custom claims or a user document field)
    // For now, we'll assume a 'role' field on the user document or just rely on auth for basic protection
    function isAdmin() {
      // Hardcoded Admin UID for strict security
      return request.auth.uid == "ZWObGtuibGhEjmxR5Af2E0FxyEH2";
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Events - Public read, Admin write
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery - Public read, Admin write
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Projects - Public read, Member write (own)
    match /projects/{projectId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Default rule: Deny everything else by default, or allow auth read/write for development
    // match /{document=**} {
    //   allow read, write: if isAuthenticated();
    // }
  }
}
